---
interface Props {
  name: string;
  price: number;
  description: string;
  image: string;
}

const { name, price, description, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <img src={image} alt={name} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-semibold">{name}</h3>
    <p class="text-gray-600 mt-2">{description}</p>
    <div class="flex flex-row justify-between items-center mt-2">
      <p class="text-2xl font-bold text-green-600">${price}</p>
      <a
        href="https://wa.me/+593992283981"
        target="_blank"
        class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 h-full"
      >
        Contacto
      </a>
    </div>
  </div>
</div>
